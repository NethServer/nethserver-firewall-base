. /usr/libexec/nethserver/api/nethserver-firewall-base/lib/firewall_functions

action=$(basename $0)

case $action in

    create | update | delete )
        save_db networks
        /sbin/e-smith/db networks setprop "$(_get name)" FwObjectNat "$(_get FwObjectNat)"
        ;;
    *)
        error
        ;;
esac

if [ $? -gt 0 ]; then
    error "SaveFailed" "check_logs"
else
    success
fi
